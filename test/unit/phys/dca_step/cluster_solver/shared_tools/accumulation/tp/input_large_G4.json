{
  "output" :
  {
    "output-format"         : "HDF5",

    "output-ED"  : "ed_results.hdf5",
    "output-QMC" : "output_QMC.hdf5"
  },

  "physics" :
  {
    "beta"                      :  2,
    "chemical-potential"        : 0
  },

  "bilayer-Hubbard-model":
  {
    "t"       : 1,
    "U"       : 2
  },

  "Hund-model":
  {
    "t"       : 1,
    "U"       : 1,
    "V"       : 1,
    "Jh"      : 2
  },

  "single-band-Hubbard-model":
  {
    "t"       : 1,
    "U"       : 2
  },

  "domains": {
    "real-space-grids": {
      "cluster": [[4, 0],
                  [0, 4]],
        "sp-host":[[20,0],
                   [0,20]],
        "tp-host":[[8,0],
                   [0,8]]
    },

    "imaginary-time": {
      "sp-time-intervals": 512
    },

    "imaginary-frequency": {
      "sp-fermionic-frequencies": 512,
      "four-point-fermionic-frequencies" : 16
    }
  },

  "four-point": {
      "type": "PARTICLE_PARTICLE_UP_DOWN",
      "compute-all-transfers" : true
  },


  "Monte-Carlo-integration" :
  {
    "Sigma-file" : "zero",
    "warm-up-sweeps"         : 100,
    "sweeps-per-measurement" : 1,
    "measurements-per-process-and-accumulator" : 500,
    "seed" : 0,

    "threaded-solver" : {
      "accumulators" : 3
    }
  },


  "CT-INT" :
  {
    "initial-configuration-size" :5,
    "alpha-dd-pos" : 0.51
  }
}
