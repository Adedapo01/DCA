//-*-C++-*-

#ifndef DCA_QMCI_HS_VERTEX_MOVE_DOMAIN_H
#define DCA_QMCI_HS_VERTEX_MOVE_DOMAIN_H

// namespace DCA
// {
//   namespace QMCI
//   {

enum    HS_vertex_move_states {HS_DN=-1, HS_ZERO=0, HS_UP=1};
typedef HS_vertex_move_states HS_vertex_move_states_type;

/*!
 *  \author: Peter Staar
 */
class HS_vertex_move_domain
{
public:

  typedef HS_vertex_move_states_type element_type;

public:

  static int                               get_size();
  static std::vector<HS_vertex_move_states_type>& get_elements();

  static int to_coordinate(element_type vertex_move);

private:

  static std::vector<HS_vertex_move_states_type> initialize_elements();
};

int HS_vertex_move_domain::get_size()
{
  return 3;
}

std::vector<HS_vertex_move_states_type>& HS_vertex_move_domain::get_elements()
{
  static std::vector<HS_vertex_move_states_type> v = initialize_elements();
  return v;
}

std::vector<HS_vertex_move_states_type> HS_vertex_move_domain::initialize_elements()
{
  static std::vector<HS_vertex_move_states_type> v(0);

  v.push_back(HS_DN);
  v.push_back(HS_ZERO);
  v.push_back(HS_UP);

  return v;
}

int HS_vertex_move_domain::to_coordinate(element_type vertex_move)
{
  switch(vertex_move)
    {
    case HS_DN:
      return 0;
      break;

    case HS_ZERO:
      return 1;
      break;

    case HS_UP:
      return 2;
      break;

    default:
      throw std::logic_error(__FUNCTION__);
    }
}

//   }

// }

#endif
