for i in range(0, n+1):
    new_struct = struct
    new_struct = new_struct.replace("I_TEMPLATE", str(i))
    new_struct = new_struct.replace("N_TEMPLATE", str(n))
    new_struct = new_struct.replace("VALUE"     , str(cos(2.*pi*(i+0.)/(n+i0.))))
    
