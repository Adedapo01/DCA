//-*-C++-*-

#ifndef GAUSSIAN_FIT_H
#define GAUSSIAN_FIT_H

namespace MATH_LIBRARY
{
  enum GAUSSIAN_PROCESSES_COVARIANCE {LINEAR_EXPONENTIAL, PERIODIC_LINEAR_EXPONENTIAL,
				      SQUARED_EXPONENTIAL, PERIODIC_SQUARED_EXPONENTIAL};

  template<typename scalar_type, typename K_dmn_t>
  class gaussian_process_covariance
  {
  public:
    
    gaussian_process_covariance();
    ~gaussian_process_covariance();

    void copy_from(gaussian_process_covariance<scalar_type, K_dmn_t>& covariance);

    scalar_type execute(std::vector<scalar_type>& x_i);

  };

}

#endif
