{
  "output" : {
    "dump-cluster-Greens-functions": true
  },

  "physics": {
    "beta"                      :  3,
    "chemical-potential"        : 0.
  },

  "single-band-Hubbard-model":
  {
    "t"       : 1.,
    "U"       : 4.
  },

  "bilayer-Hubbard-model":
  {
    "t"       : 1.,
    "U"       : 4.,
    "t-prime" : 1.,
    "t-perp"  : 1.,
    "V"       : 1.,
    "V-prime" : 1
  },

  "domains": {
    "real-space-grids": {
      "cluster": [[2, 0],
        [0, 2]]
    },

    "imaginary-time": {
      "sp-time-intervals": 512
    },

    "imaginary-frequency": {
      "sp-fermionic-frequencies": 512
    }
  },

  "CT-AUX" : {
    "expansion-parameter-K": 1.,
    "initial-configuration-size": 10,
    "max-submatrix-size": 16
  },

  "CT-INT" :
  {
    "use-submatrix" : true,
    "max-submatrix-size": 75,
    "initial-configuration-size": 20,
    "alpha-dd-pos" : 0.501,
    "compute-error-bar" : true
  },

  "DCA": {
    "iterations": 1,
    "self-energy-mixing-factor": 0.,
    "interacting-orbitals": [0]
  },

  "Monte-Carlo-integration" : {
    "warm-up-sweeps": 250,
    "sweeps-per-measurement": 1,
      "measurements": 1000,
      "measurements-per-process-and-accumulator": 12000,
    "seed": "random",
    "threaded-solver": {
      "walkers": 1,
      "accumulators": 1
    }
  }
}










