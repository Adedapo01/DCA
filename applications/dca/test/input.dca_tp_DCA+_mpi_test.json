{
    "filename-parameters" :
    {
        "output-format"         : "HDF5",

        "directory"             : "./",

        "output-file"           : "data.dca_tp_DCA+_mpi_test.hdf5",
        "profiling-file"        : "profiling.dca_tp_DCA+_mpi_test.hdf5",

        "spectrum-file"         : "",
        "susceptibilities-file" : ""
    },

    "physics-parameters" :
    {
        "beta"                      :  1,

        "adjust-chemical-potential" : "true",
        "density"                   :  0.900,
        "chemical-potential"        :  0.0
    },

    "2D-Hubbard-model" :
    {
        "t"       : 1,
        "t-prime" : 0,

        "U"       : 4,
        "U_prime" : 0
    },

    "DCA" :
    {
        "do-DCA+" : "true",

        "interacting-bands" : [0],
        "DCA-iterations"    : 1,
        "DCA-accuracy"      : 0.0001,
        "DCA-mixing-factor" : 1,

        "cluster" : [[2, 0],
                     [0, 2]],

        "cluster-mapping" :
        {
            "k-mesh-refinement" : 3,
            "quadrature-rule"   : 1,
            "number-of-periods" : 2,

            "precompute-Hamiltonian"      : "true",
            "phi(k) integration accuracy" : 0.001,

            "print-phi"                   : "false"
        },

        "lattice-mapping" :
        {
            "interpolation-method" : "wannier-interpolation",
            "HTS-approximation"    : "false",

            "deconvolution-tolerance"      : 0.01,
            "max-deconvolution-iterations" : 16
        }
    },

    "Monte-Carlo-Integration" :
    {
        "Sigma-file" : "input_data.dca_tp_DCA+_mpi_test.hdf5",

        "warm-up-sweeps"         : 20,
        "sweeps-per-measurement" : 4,
        "measurements"           : 100,

        "adaptive-double-counting" : "false",

        "RNG-seed" : 985456376,

        "MC-posix-parameters" :
        {
            "nr-walkers"       : 4,
            "nr-accumulators"  : 12,
            "additional-steps" : 0
        }
    },

    "CT-AUX-solver" :
    {
        "submatrix-size"      : 64,
        "initial-matrix-size" : 256,

        "K-parameter"         : 1
    },

    "function-parameters" :
    {
        "single-particle-functions" :
        {
            "H(k) grid-size"        : [10, 10],

            "time-intervals"        : 128,
            "fermionic-frequencies" : 256,
            "bosonic-frequencies"   : 32,

            "sp-cluster" : [[8, 8],
                            [8,-8]]
        },

        "two-particle-functions" :
        {
            "time-intervals"        : 16,

            "fermionic-frequencies" : 16,
            "bosonic-frequencies"   : 16,

            "tp-cluster" : [[8, 8],
                            [8,-8]]
        },

        "real-axis-functions" :
        {
            "lower-bound" : -10,
            "upper-bound" :  10,

            "nr-intervals" : 128,
            "real-axis-off-set" : 0.01
        }
    },

    "vertex-channel" :
    {
        "vertex-measurement-type" : "PARTICLE_PARTICLE_SUPERCONDUCTING",

        "q-channel" : [0, 0],
        "w-channel" : 0,

        "deconvolute-Gamma" : "yes",
        "symmetrize-Gamma"  : "yes",

        "lattice-mapping" :
        {
            "singular-value-sigma-cut-off" : 0.5
        },

        "lattice-solver" :
        {
            "diagonolize-folded-Gamma-chi_0" : "false",
            "BSE-cut-off-radius"             : 1.5
        },

        "options" :
        {
            "compute-chi"   : "no",
            "compute-chi_0" : "no",

            "compute-eigenvalues" : "yes",

            "compute-Pq-cluster" : "no",
            "compute-Pq-lattice" : "no"
        }
    },

    "CPE-parameters" :
    {
        "do-CPE" : "false",

        "max-CPE-iterations"             : 10000,
        "number-of-matsubara-freqencies" : 64,

        "compute-free-spectrum"    : "true",
        "compute-lattice-spectrum" : "false",
        "compute-cluster-spectrum" : "false"
    }
}
