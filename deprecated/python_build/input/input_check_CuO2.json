           "deconvolution-tolerance"      : 0.01,
           "max-deconvolution-iterations" : 32
        }
    },

    "Monte-Carlo-Integration" :
    {
        "Sigma-file" : "zero",

        "warm-up-sweeps"         : 20,
        "sweeps-per-measurement" : 1,
        "measurements"           : 1250,

        "adaptive-double-counting" : "true",

        "RNG-seed" : 985456376,

        "MC-posix-parameters" :
        {
            "nr-walkers"       : 1,
            "nr-accumulators"  : 1,
            "additional-steps" : 1,

            "HTS-threads" : 8
        }
    },

    "CT-AUX-solver" :
    {
        "submatrix-size"      : 64,
        "initial-matrix-size" : 256,

        "K-parameter"         : 1
    },

    "function-parameters" :
    {
        "single-particle-functions" :
        {
            "H(k) grid-size"        : [32, 32],

            "time-intervals"        : 128,
            "fermionic-frequencies" : 256,
            "bosonic-frequencies"   : 32,

            "sp-cluster" : [[10, 10],
                            [10,-10]]
        },

        "two-particle-functions" :
        {
            "time-intervals"        : 16,

            "fermionic-frequencies" : 16,
            "bosonic-frequencies"   : 16,

            "tp-cluster" : [[8, 8],
                            [8,-8]]
        },

        "real-axis-functions" :
        {
            "lower-bound" : -20,
            "upper-bound" :  20,

            "nr-intervals" : 81,
            "real-axis-off-set" : 0.01
        }
     },

    "equal-time-observables" :
    {
        "do-equal-time-measurements" : "false"
    },

    "CPE-parameters" :
    {
        "do-CPE" : "true",

        "max-CPE-iterations" : 1024,
        "max-CPE-error"      : 0.01,

        "number-of-matsubara-freqencies" : 64,

        "smoothing-factor" : 1,

        "simulate-Gaussian-noise" : "false",
        "nr-of-samples"           : 16,
        "simulated-stddev"        : 0.1,

        "compute-free-spectrum"    : "true",
        "compute-lattice-spectrum" : "true",
        "compute-cluster-spectrum" : "false"
    }
}
