{
    "filename-parameters" :
    {
        "output-format"         : "HDF5",

        "output-file"           : "data_CuO2.hdf5",
        "profiling-file"        : "data_CuO2_profiling.hdf5",

        "spectrum-file"         : "data_CuO2_spectrum.hdf5",
        "susceptibilities-file" : "data_CuO2_susceptibilities.hdf5",

        "dump-lattice-self-energy"     : "false",
        "dump-cluster-Greens-function" : "false"
    },

    "physics-parameters" :
    {
        "beta"                      :  10,

        "adjust-chemical-potential" : "false",
        "density"                   :  5.0,
        "chemical-potential"        :  0.0
    },

    "material-model" :
    {
        "t_ij-filename" : "../../src/phys_library/parameters/models/material_Hamiltonians/template_specialization_CuO2/Hamiltonian_La2CuO4_3_band.txt",
        "U_ij-filename" : "../../src/phys_library/parameters/models/material_Hamiltonians/template_specialization_CuO2/U_ij_CuO2.txt"
    },


    "double-counting-parameters" :
    {
        "double-counting-method"     : "adaptive",
        "double-counting-correction" : 0.0
    },

    "DCA" :
    {
        "do-DCA+" : "true",

        "interacting-bands" : [0],
        "DCA-iterations"    : 6,
        "DCA-mixing-factor" : 1,

        "cluster" : [[ 4, 0],
                     [ 0, 4]],

        "cluster-mapping" :
        {
           "k-mesh-refinement" : 3,
           "quadrature-rule"   : 0,
           "number-of-periods" : 2,

           "number-of-threads" : 8,

           "precompute-Hamiltonian"      : "true",
           "phi(k) integration accuracy" : 0.01,

           "print-phi"                   : "true"
        },

        "lattice-mapping" :
        {
           "interpolation-method" : "wannier-interpolation",
